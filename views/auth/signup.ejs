<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
  </head>

  <body>
    <%- include('../includes/navigation.ejs')%>

    <main>
      <% if(errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>
      <form class="signup-form" action="/signup" method="POST" novalidate>
        <div class="form-control">
          <label for="email">E-Mail</label>
          <input
          class="<%= validationErrors.find(err => err.path === 'email') ? 'invalid' : '' %>"
          type="email" name="email" id="email" 
          value="<%= oldInput.email %>"/>
        </div>
        <div class="form-control">
          <label for="password">Password</label>
          <input
          class="<%= validationErrors.find(err => err.path === 'password') ? 'invalid' : '' %>" 
          type="password" name="password" id="password" value="<%= oldInput.password %>"/>
        </div>
        <div class="form-control">
          <label for="confirm-password">Confirm Password</label>
          <input 
          class="<%= validationErrors.find(err => err.path === 'confirmPassword') ? 'invalid' : '' %>"
          type="password" name="confirmPassword" id="confirm-password" 
          value="<%= oldInput.confirmPassword %>"/>
        </div>
        <button class="btn" type="submit">Signup</button>
        <%- include('../includes/csrf.ejs')%>
      </form>
    </main>
<%- include('../includes/end.ejs')%>
