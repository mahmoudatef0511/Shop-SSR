<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
  </head>

  <body>
    <%- include('../includes/navigation.ejs')%>

    <main>
        <% if(errorPassword) { %>
          <div class="user-message user-message--error"><%= errorPassword %></div>
        <% } %>
      <form class="login-form" action="/update-password" method="POST">
        <div class="form-control">
          <label for="current-password">Current Password</label>
          <input type="password" name="currentPassword" id="current-password" />
        </div>
        <div class="form-control">
          <label for="new-password">New Password</label>
          <input type="password" name="newPassword" id="new-password" />
        </div>
        <div class="form-control">
          <label for="confirm-password">Confirm new Password</label>
          <input type="password" name="confirmNewPassword" id="confirm-password" />
        </div>
        <button class="btn" type="submit">Update Password</button>
        <%- include('../includes/csrf.ejs')%>
      </form>
    </main>
<%- include('../includes/end.ejs')%>
