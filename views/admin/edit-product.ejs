<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/forms.css" />
    <link rel="stylesheet" href="/css/product.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs')%>
    <% const {_id, title, imageURL, price, description} = product %>

    <main>
      <% if(errorMessage) { %>
          <div class="user-message user-message--error"><%= errorMessage %></div>
      <% } %>
      <form class="product-form" action="/admin/<%= editing ? 'edit-product' : 'add-product' %>" method="POST" enctype="multipart/form-data">
        <div class="form-control">
          <label for="title">Title</label>
          <input class="<%= validationErrors.find(err => err.path === 'title') ? 'invalid' : '' %>" type="text" name="title" id="title" value="<%= editing ? title : '' %>"/>
        </div>
        <!-- <div class="form-control">
          <label for="imageURL">Image URL</label>
          <input class="<%= validationErrors.find(err => err.path === 'imageURL') ? 'invalid' : '' %>" type="text" name="imageURL" id="imageURL" value="<%= editing ? imageURL : '' %>"/>
        </div> -->
        <div class="form-control">
          <label for="image">Image</label>
          <input type="file" name="image" id="image"/>
        </div>
        <div class="form-control">
          <label for="price">Price</label>
          <input class="<%= validationErrors.find(err => err.path === 'price') ? 'invalid' : '' %>" type="number" name="price" id="price" step="0.01" value="<%= editing ? price : '' %>"/>
        </div>
        <div class="form-control">
          <label for="description">Description</label>
          <textarea class="<%= validationErrors.find(err => err.path === 'description') ? 'invalid' : '' %>" name="description" id="description"><%= editing ? description : '' %></textarea>
        </div>
        <% if (editing) { %>
            <input type="hidden" name="id" value=<%= _id %>>
        <% } %>
        <button class="btn" type="submit"><%= editing ? 'Update Product' : 'Add Product'; %></button>
        <%- include('../includes/csrf.ejs')%>
      </form>
    </main>
<%- include('../includes/end.ejs')%>
